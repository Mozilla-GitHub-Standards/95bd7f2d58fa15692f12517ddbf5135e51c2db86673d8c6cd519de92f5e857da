  {{!-- image --}}
  {{#if_eq post_type 'image'}}
  <div class="modal--image">

    {{!-- <img src="{{image.url}}" alt=""> --}}


    {{!-- <div class="figure" style="background-image: url(http://charlie-macbook-pro.local:5757/wp-content/uploads/2015/05/learn-volunteers.gif);"></div> --}}

    {{!-- <div class="figure" style="background-image: url(http://charlie-macbook-pro.local:5757/wp-content/uploads/2015/05/latte.jpg);"></div> --}}

    <div class="figure figure--image" style="background-image: url({{image.url}});"></div>


    {{#if download}}
      {{> downloadFirefox}}
    {{else}}
      {{> socialFooterModal}}
    {{/if}}
  </div>
  {{/if_eq}}
  {{!-- video --}}
  {{#if_eq post_type 'video'}}
  <div class="modal--video">
    <div class="video-container">
      <iframe width="560" height="315" src="https://www.youtube.com/embed/{{youtube_id}}?autohide=0&autoplay=1&cc_load_policy=0&controls=1&disablekb=0&fs=0&iv_load_policy=3&loop=0&modestbranding=1&origin=0&rel=0&showinfo=0&theme=0" frameborder="0" allowfullscreen></iframe>

    </div>
    {{#if download}}
        {{> downloadFirefox}}
    {{else}}
      {{> socialFooterModal}}
    {{/if}}
  </div>
  {{/if_eq}}